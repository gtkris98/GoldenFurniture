<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/order_tv_furniture_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textSize="25sp"
            tools:text="Golden Furniture Almirah" />

        <TextView
            android:id="@+id/order_tv_furniture_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:textSize="15sp"
            tools:text="Amount : Rs.15000" />

        <TextView
            android:id="@+id/order_tv_furniture_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:textSize="15sp"
            tools:text="Date: April 25, 2018" />

        <TextView
            android:id="@+id/order_tv_furniture_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:textSize="20sp"
            tools:text="Status : Pending"
            tools:textColor="@color/yellow"/>

    </LinearLayout>





